<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
          crossorigin="anonymous" />
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="~/dashboard/css/style.css" />
    <link rel="stylesheet" href="~/dashboard/css/form.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="header-left">
            <button class="header-button">
                <span class="material-symbols-rounded"> menu </span>
            </button>
            <h1>Dashboard</h1>
        </div>
        <div class="header-right">
            <div class="search-bar">
                <span class="material-symbols-rounded icon"> search </span>
                <input type="search" placeholder="Search..." class="text-white"/>
            </div>
            <button class="header-button">
                <span class="material-symbols-rounded"> settings </span>
            </button>
            <button class="header-button">
                <span class="material-symbols-rounded"> notifications </span>
            </button>
            <button class="header-button text-white">
                <p class="m-0">Generate Report</p>
                <span class="material-symbols-rounded"> bar_chart </span>
            </button>
        </div>
    </header>
    <aside class="sidebar">
        <!-- Sidebar Header -->
        <header class="sidebar-header">
            <a href="#" class="header-logo">
                <img src="" alt="Logo" />
            </a>
            <button class="sidebar-toggler">
                <span class="material-symbols-rounded"> chevron_left </span>
            </button>
        </header>

        <nav class="sidebar-nav">
            <!-- Top Nav -->
            <ul class="nav-list primary-nav">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <span class="material-symbols-rounded"> dashboard </span>
                        <span class="nav-label">Dashboard</span>
                    </a>
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Dashboard</a>
                        </li>
                    </ul>
                </li>
                <!-- Dropdown -->
                <li class="nav-item drop-container">
                    <a href="#" class="nav-link drop-toggle">
                        <span class="material-symbols-rounded"> group </span>
                        <span class="nav-label">Manage Employees</span>
                        <span class="material-symbols-rounded drop-icon">
                            keyboard_arrow_down
                        </span>
                    </a>
                    <!-- Dropdown Menu -->
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Manage Employees</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Employee" asp-action="Index" class="nav-link drop-link">All Employees</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Employee" asp-action="Create" class="nav-link drop-link">Add Employee</a>
                        </li>
                    </ul>
                </li>
                <!--Departments Dropdown -->
                <li class="nav-item drop-container">
                    <a href="#" class="nav-link drop-toggle">
                        <span class="material-symbols-rounded"> apartment </span>
                        <span class="nav-label">Manage Department</span>
                        <span class="material-symbols-rounded drop-icon">
                            keyboard_arrow_down
                        </span>
                    </a>
                    <!-- Dropdown Menu -->
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Manage Department</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Department" asp-action="Index" class="nav-link drop-link">All Departments</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Department" asp-action="Add" class="nav-link drop-link">Add Department</a>
                        </li>
                    </ul>
                </li>
                <!-- Grades Dropdown -->
                <li class="nav-item drop-container">
                    <a href="#" class="nav-link drop-toggle">
                        <span class="material-symbols-rounded"> military_tech </span>
                        <span class="nav-label">Manage Grades</span>
                        <span class="material-symbols-rounded drop-icon">
                            keyboard_arrow_down
                        </span>
                    </a>

                    <!-- Dropdown Menu -->
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Manage Grades</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Grade" asp-action="Index"
                               class="nav-link drop-link">
                                All Grades
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Grade" asp-action="Add"
                               class="nav-link drop-link">
                                Add Grade
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <span class="material-symbols-rounded"> notifications </span>
                        <span class="nav-label">Notifications</span>
                    </a>
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Notifications</a>
                        </li>
                    </ul>
                </li>
               
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <span class="material-symbols-rounded"> settings </span>
                        <span class="nav-label">Settings</span>
                    </a>
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Settings</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Bottom Nav -->
            <ul class="nav-list sec-nav">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <span class="material-symbols-rounded"> account_circle </span>
                        <span class="nav-label">Profile</span>
                    </a>
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Profile</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <span class="material-symbols-rounded"> logout </span>
                        <span class="nav-label">Sign Out</span>
                    </a>
                    <ul class="drop-menu">
                        <li class="nav-item">
                            <a class="nav-link drop-title">Sign Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </aside>
    @* <div class="container"> *@
        <main role="main" class="main-wrapper">
            @RenderBody()
        @RenderSection("AlertsSection", required: false)
        </main>
    @* </div> *@

    <!-- Apexcharts Cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/dashboard/js/script.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
