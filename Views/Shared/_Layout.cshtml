<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="./dashboard/css/style.css" />
    <link rel="stylesheet" href="./dashboard/css/dashboard.css" />
</head>
<body>
        <header class="header">
        <div class="header-left">
          <button class="header-button">
            <span class="material-symbols-rounded"> menu </span>
          </button>
          <h1>Dashboard</h1>
        </div>
        <div class="header-right">
          <div class="search-bar">
            <span class="material-symbols-rounded icon"> search </span>
            <input type="search" placeholder="Search..." />
          </div>
          <button class="header-button">
            <span class="material-symbols-rounded"> settings </span>
          </button>
          <button class="header-button">
            <span class="material-symbols-rounded"> notifications </span>
          </button>
          <button class="header-button">
            <p>Generate Report</p>
            <span class="material-symbols-rounded"> bar_chart </span>
          </button>
        </div>
      </header>
      <aside class="sidebar">
        <!-- Sidebar Header -->
        <header class="sidebar-header">
          <a href="#" class="header-logo">
            <img src="./assets/h-logo.jpg" alt="Logo" />
          </a>
          <button class="sidebar-toggler">
            <span class="material-symbols-rounded"> chevron_left </span>
          </button>
        </header>

        <nav class="sidebar-nav">
          <!-- Top Nav -->
          <ul class="nav-list primary-nav">
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> dashboard </span>
                <span class="nav-label">Dashboard</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Dashboard</a>
                </li>
              </ul>
            </li>
            <!-- Dropdown -->
            <li class="nav-item drop-container">
              <a href="#" class="nav-link drop-toggle">
                <span class="material-symbols-rounded"> calendar_today </span>
                <span class="nav-label">Services</span>
                <span class="material-symbols-rounded drop-icon">
                  keyboard_arrow_down
                </span>
              </a>
              <!-- Dropdown Menu -->
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Services</a>
                </li>
                <li class="nav-item">
                  <a href="#" class="nav-link drop-link">Web Development</a>
                </li>
                <li class="nav-item">
                  <a href="#" class="nav-link drop-link">Cyber Security</a>
                </li>
                <li class="nav-item">
                  <a href="#" class="nav-link drop-link">Graphic Designing</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> notifications </span>
                <span class="nav-label">Notifications</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Notifications</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> local_library </span>
                <span class="nav-label">Resources</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Resources</a>
                </li>
              </ul>
            </li>
            <!-- Dropdown -->
            <li class="nav-item drop-container">
              <a href="#" class="nav-link drop-toggle">
                <span class="material-symbols-rounded"> star </span>
                <span class="nav-label">Bookmarks</span>
                <span class="material-symbols-rounded drop-icon">
                  keyboard_arrow_down
                </span>
              </a>
              <!-- Dropdown Menu -->
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Bookmarks</a>
                </li>
                <li class="nav-item">
                  <a href="#" class="nav-link drop-link">Saved Tutorials</a>
                </li>
                <li class="nav-item">
                  <a href="#" class="nav-link drop-link">Favourite Blogs</a>
                </li>
                <li class="nav-item">
                  <a href="#" class="nav-link drop-link">Resources Guide</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> extension </span>
                <span class="nav-label">Extensions</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Extensions</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> settings </span>
                <span class="nav-label">Settings</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Settings</a>
                </li>
              </ul>
            </li>
          </ul>
          <!-- Bottom Nav -->
          <ul class="nav-list sec-nav">
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> help </span>
                <span class="nav-label">Support</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Support</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <span class="material-symbols-rounded"> logout </span>
                <span class="nav-label">Sign Out</span>
              </a>
              <ul class="drop-menu">
                <li class="nav-item">
                  <a class="nav-link drop-title">Sign Out</a>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      </aside>
    <div class="container">
        <main role="main" class="main-wrapper">
            @RenderBody()
        </main>
    </div>

    <!-- Apexcharts Cdn -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="./dashboard/js/script.js"></script>
    <script src="./dashboard/js/dashboard.js"></script>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
